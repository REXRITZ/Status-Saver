<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/native_ad_view"
        android:layout_margin="@dimen/_2dp">

        <LinearLayout
            android:id="@+id/ad_empty"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="@dimen/ad_default_margin"
            android:visibility="gone"
            android:gravity="center"
            android:background="?attr/adBackgroundColor">
            <TextView
                android:layout_width="@dimen/ad_indicator_width"
                android:layout_height="wrap_content"
                android:text="@string/ad"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/gnt_rounded_corners_shape"
                android:textSize="@dimen/ad_text_size_small"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ad_default_margin"
            android:background="?attr/adBackgroundColor">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/media_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:layout_constraintStart_toEndOf="@id/media_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/ad_default_margin"/>

            <TextView
                android:id="@+id/body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                app:layout_constraintStart_toEndOf="@id/media_view"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/ad_default_margin"/>

            <LinearLayout
                android:id="@+id/rating_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/ad_indicator_height"
                app:layout_constraintStart_toEndOf="@id/media_view"
                app:layout_constraintTop_toBottomOf="@id/body"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginStart="@dimen/ad_default_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/ad_indicator_width"
                    android:layout_height="match_parent"
                    android:text="@string/ad"
                    android:gravity="center"
                    android:textColor="?attr/colorPrimary"
                    android:background="@drawable/gnt_rounded_corners_shape"
                    android:textSize="@dimen/ad_text_size_small"/>
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/ad_text_size_small"
                    android:textColor="@color/gnt_gray"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:rating="3"
                    android:layout_marginStart="@dimen/ad_default_margin"
                    android:lines="1"
                    style="?attr/ratingBarStyleSmall"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/media_view"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/ad_default_margin"
                app:layout_constraintTop_toBottomOf="@id/rating_layout"
                app:layout_constraintBottom_toBottomOf="@id/media_view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>

</merge>